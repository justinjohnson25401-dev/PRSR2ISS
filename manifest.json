{
  "manifest_version": 3,
  "name": "2GIS Parser Pro",
  "description": "Продвинутый парсер контактов компаний из 2ГИС с экспортом в Excel, CSV, JSON",
  "version": "2.3.6",
  "default_locale": "ru",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["log.js"],
      "matches": [
        "https://2gis.ru/*",
        "https://2gis.kz/*",
        "https://2gis.kg/*",
        "https://2gis.uz/*",
        "https://2gis.by/*",
        "https://2gis.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": ["content.js"],
      "matches": [
        "https://2gis.ru/*/search/*",
        "https://2gis.kz/*/search/*",
        "https://2gis.kg/*/search/*",
        "https://2gis.uz/*/search/*",
        "https://2gis.by/*/search/*",
        "https://2gis.com/*/search/*"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": [
    "downloads",
    "webRequest",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.2gis.ru/*",
    "https://*.2gis.kz/*",
    "https://*.2gis.kg/*",
    "https://*.2gis.uz/*",
    "https://*.2gis.by/*",
    "https://*.2gis.com/*",
    "https://*.2gis.am/*",
    "https://*.2gis.ge/*",
    "https://*.2gis.az/*",
    "https://*.2gis.md/*",
    "https://*.2gis.tj/*",
    "https://*.2gis.tm/*",
    "https://*.2gis.ae/*",
    "https://*.2gis.sa/*",
    "https://*.2gis.it/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
